@using StaffManagementSystem.Models
@model LoginViewModel
@{
    Layout = null;
}


<!Doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/Login/css/style.css">
    @*<link href="~/Content/Login/mystyle.css" rel="stylesheet" />*@


</head>
<body>
    <section class="#">@*ftco-section*@
        <div class="container">
            <div style="color:lightgreen; text-align:center;" id="msg">@ViewBag.Message</div><br />
            
            <div class="row justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="wrap d-md-flex">
                        <div class="img" style="background-image: url('../../Content/Login/images/proimg1.jpg');"@*url('../../Content/Login/images/bg-1.jpg');*@ >
                        </div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Content/Login/js/jquery.min.js"></script>
    <script src="~/Content/Login/js/popper.js"></script>
    <script src="~/Content/Login/js/bootstrap.min.js"></script>
    <script src="~/Content/Login/js/main.js"></script>


    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $("#msg").fadeOut();
            }, 15000);
        });
    </script>
</body>
</html>
