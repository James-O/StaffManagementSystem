@model StaffManagementSystem.Models.RolesModel

@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        

        @using (Html.BeginForm("Create", "Roles", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Create Roles</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RoleTbName, new { htmlAttributes = new { @class = "form-control", placeholder = "Role name" } })
                        @Html.ValidationMessageFor(model => model.RoleTbName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RoleTbDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Role description" } })
                        @Html.ValidationMessageFor(model => model.RoleTbDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control", placeholder = "Created by" } })
                        @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UpdatedBy, new { htmlAttributes = new { @class = "form-control", placeholder = "Updated by" } })
                        @Html.ValidationMessageFor(model => model.UpdatedBy, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Role")
        </div>
    </div>
</div>

