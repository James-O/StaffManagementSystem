
@model IEnumerable<StaffManagementSystem.Models.DepartmentTb>

@{
    ViewBag.Title = "Department";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
        <h2>Department</h2>

        <p>
            <button class="btn btn-small" style="background-color:green; color:white;">@Html.ActionLink("Add New", "Create")</button>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DeparmentTbName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.departmentTbDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.createdBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedBy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UpdatedOn)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeparmentTbName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.departmentTbDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.createdBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UpdatedOn)
                    </td>
                    <td>
                        <button class="btn btn-small" style="background-color:green; color:white;">@Html.ActionLink("Edit", "Edit", new { id = item.DepartmentTbId })</button>
                        <button class="btn btn-small" style="background-color:green; color:white;">@Html.ActionLink("Delete", "Delete", new { id = item.DepartmentTbId })</button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
